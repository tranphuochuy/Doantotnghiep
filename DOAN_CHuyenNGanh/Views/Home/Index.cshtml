                <a href="#"><p>Thông báo 4</p></a>
                <a href="#"><p>Thông báo 5</p></a>
                <a href="#"><p>Thông báo 6</p></a>
                <a href="#"><p>Thông báo 7</p></a>
            </div>
        </div>
    </div>

</div>

<script>
    
Highcharts.chart('container', {
    chart: {
        type: 'column',
        width: 300
    },
    title: {
        text: 'Lượt người truy cập web site'
    },
    xAxis: {
        categories: [
            'Thứ 2',
            'Thứ 3',
            'Thứ 4',
            'Thứ 5',
            'Thứ 6',
            'Thứ 7',
            'Chủ Nhật'
        ],
        crosshair: true
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Lượt người truy cập web site'
        }
    },
    tooltip: {
        headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
        pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
            '<td style="padding:0"><b>{point.y}</b></td></tr>',
        footerFormat: '</table>',
        shared: true,
        useHTML: true
    },
    plotOptions: {
        column: {
            pointPadding: 0.1,
            borderWidth: 0
        }
    },
    series: [{
        name: 'Phụ Huynh',
        data: [50, 70, 100, 129, 144, 176, 135]

    }, {
        name: 'Giáo Viên',
        data: [83, 78, 98, 93, 106, 84, 105]

    }, {
        name: 'Học Sinh',
        data: [48, 38, 39, 41, 47, 48, 59]

    }, {
        name: 'Khách',
        data: [42, 33, 34, 39, 52, 75, 57]

    }]
    });

    Highcharts.chart('container-circle', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie',
            width: 400
        },
        title: {
            text: 'Thống kê xếp loại'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage}</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: 'Brands',
            colorByPoint: true,
            data: [{
                name: 'Giỏi',
                y: 80.0,
                sliced: true,
                selected: true
            }, {
                    name: 'Tiên tiến',
                y: 15.0
            }, {
                    name: 'Trung bình',
                y: 3.0
            }, {
                    name: 'Yếu',
                y: 1.0
            }, {
                    name: 'Kém',
                y: 1.0
            }]
        }]
    });
</script>